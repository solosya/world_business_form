                            <div class="col-sm-2">
                                <h2>APAC PR Partner</h2>
                                <img src="{{networkData.templatePath}}/static/images/sponsor_logos/adro.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section><!-- .sponsor-logos-->


    </main><!-- .site-main -->