{{ set(this, 'title', name) }}
{% set networkData = _Network.getNetworkData() %}
<div class="page_section">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-centered">
                <div class="error-wrapper text-center">
                    <img src="{{networkData.templatePath}}/static/images/error.svg" style="width:100px;height:100%;margin-bottom:50px;" class="error-icon" alt="Error" />
                    <div class="error-message">
                        {# <h1 class="error-heading">{{statusCode}} <span>{{name}}</span></h1> #}
                        <p class="content-section">Sorry! {{_AppHelper.translator('app', message)}}</p>
                        <a href="/" class="button red home-button"><i class="fa fa-long-arrow-left"></i>Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
