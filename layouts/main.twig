{% set pageTypeClass = blogData.type %}
{% set blogName      = blogData.title %}
    
{{ this.beginPage() }}
<!DOCTYPE html>
<html lang="en-AU" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="UTF-8">
